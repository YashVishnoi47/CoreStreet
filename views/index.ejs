<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet">
    <link href="/stylesheets/styling.css" rel="stylesheet">
</head>
<body class="w-full h-screen flex flex-col justify-center items-center  selection:bg-blue-500 selection:text-white">

    <div id="flash-message" class="flash-message opacity-100">

        <% if(error.length>0){ %>
            <div class="absolute top-0 right-0 mt-20 mr-2 p-3 rounded-md bg-red-500">
                <span class="inline-block  text-white">
                    <%= error %>
                </span>
            </div>
            <% } %>

            
    </div>



    <div class="navbar border-b-2 border-blue-500 relative h-[10rem] flex min-w-full  ">
        <div class="left relative flex items-center h-full w-[50%]  ">
            <h1 class="logo font-semibold text-blue-500 select-none cursor-pointer inline-block text-2xl p-2">CoreStreet </h1>
        </div>

        <div class="right relative h-full w-[50%]">
            <div class="nav-links flex gap-8 justify-end items-center h-full p-3">

                <!-- Home -->
                <a id="nav-btn-1" class="text-2xl scale-100 hover:scale-110 transition-all top-1 duration-150 ease-in-out z-50 relative" href="/home"><img src="/images/home.svg" alt=""></a>
                <!-- Buy Now -->
                <a id="nav-btn-1" class="px-5 rounded-full min-w-16 py-3 mt-2 bg-blue-500 m-w-[50%] text-white hover:bg-blue-600 cursor-pointer transition-all duration-200 ease-in-out" href="/shop">Buy now</a>
            </div>
        </div>

        <div id="menu-btn" class="menu-btn right-2 top-4 z-50   absolute">
            <img id="nav-menu" class="nav-menu w-8 h-8 cursor-pointer" src="/images/menu.svg" alt="" >
        </div>

        
    </div>
    
    <div id="res-nav" class="res-nav   transition-all duration-200 ease-in-out z-50 items-center justify-center w-full relative left-5 top-0">
        <div class=" res-nav-in p-6 flex flex-col gap-10  h-auto  min-w-[90%] border-2 top-4 border-blue-500 absolute">
            <!-- Home -->
            <a id="nav-btn-1" class="text-2xl scale-100 hover:scale-110 transition-all top-1 duration-150 ease-in-out  relative" href="/home">Home</a>
            <!-- Buy Now -->
            <a id="nav-btn-1" class="px-5 rounded-full  py-3 mt-2 bg-blue-500 w-[100%] text-white hover:bg-blue-600 cursor-pointer transition-all duration-200 ease-in-out" href="/shop">Buy now</a>
        </div>
    </div>
    



        <!-- <h3 class="corestreet text-4xl relative text-center top-6  min-w-full ">Welcome to <span class="text-blue-400 font-semibold">CoreStreet</span></h3> -->
                <div id="register" class="min-w-[50%] mt-[50px] mx-20 flex items-center justify-center h-screen">
                    <div class="w-full px-[50px]">
                        <h4 id="index-input" class="text-2xl mb-5">Create your <span class="text-blue-500 font-semibold">Account</span></h4>
                        <form autocomplete="off" class="w-full" action="/users/register" method="post">
                            <input id="index-input"
                                class="bg-zinc-100 min-w-full block  px-3 py-2 border-[1px] focus:outline-blue-500 transition-all duration-300 outline-none focus:shadow-blue_shadow_500 focus:placeholder:text-blue-500 ease-in-out rounded-md mb-3 border-zinc-200"
                                type="text" placeholder="Full Name" name="fullname">
                            <input id="index-input"
                                class="bg-zinc-100 min-w-full block  px-3 py-2 border-[1px] focus:outline-blue-500 transition-all duration-300 outline-none focus:shadow-blue_shadow_500 focus:placeholder:text-blue-500 ease-in-out rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input id="index-input"
                                class="bg-zinc-100 min-w-full block  px-3 py-2 border-[1px] focus:outline-blue-500 transition-all duration-300 outline-none focus:shadow-blue_shadow_500 focus:placeholder:text-blue-500 ease-in-out rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <input id="index-input" class="px-5 rounded-full min-w-full py-3 mt-2 bg-blue-500 m-w-[50%] text-white hover:bg-blue-600 cursor-pointer transition-all duration-200 ease-in-out" type="submit"
                                value="Create My Account">
                        </form>
                    </div>
                </div>
                <div id="login" class="min-w-[50%] mx-20 flex items-center justify-center h-screen">
                    <div class="w-full px-[50px]">
                        <h4 id="index-input" class="text-2xl capitalize mb-5">login your <span class="text-blue-500 font-semibold">Account</span></h4>
                        <form autocomplete="off" class="w-full" action="/users/login" method="post">
                            <input id="index-input"
                                class="block bg-zinc-100 min-w-full  px-3 py-2 border-[1px] focus:outline-blue-500 transition-all duration-300 outline-none focus:shadow-blue_shadow_500 focus:placeholder:text-blue-500 ease-in-out rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input id="index-input"
                                class="block bg-zinc-100 min-w-full  px-3 py-2 border-[1px] focus:outline-blue-500 transition-all duration-300 outline-none focus:shadow-blue_shadow_500 focus:placeholder:text-blue-500 ease-in-out rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <input id="index-input" class="px-5 min-w-full block rounded-full py-3 mt-4 bg-blue-500 hover:bg-blue-600 cursor-pointer text-white transition-all duration-200 ease-in-out" type="submit"
                                value="Login">
                        </form>
                    </div>
                </div>
            

</body>
<script src="/javascripts/logic.js"></script>
</html>